# Video Processing Service Configuration

# Service
PORT=8012
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://scriptsensei:password123@localhost:5433/scriptsensei

# Redis
REDIS_URL=redis://localhost:6379/0

# Azure Cognitive Services (Voice Synthesis)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus

# Google Cloud (Voice Synthesis)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# ElevenLabs (Premium Voice)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Storage
VIDEO_STORAGE_PATH=/tmp/scriptsensei/videos
AUDIO_STORAGE_PATH=/tmp/scriptsensei/audio
THUMBNAIL_STORAGE_PATH=/tmp/scriptsensei/thumbnails

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=scriptsensei-videos
AWS_REGION=us-east-1

# FFmpeg
FFMPEG_BINARY=/usr/bin/ffmpeg
FFMPEG_THREADS=4

# Rate Limiting
MAX_VIDEOS_PER_HOUR=10
MAX_VIDEO_DURATION=600

# Processing
VIDEO_QUEUE_WORKERS=5
VIDEO_BITRATE_1080P=8000000
VIDEO_BITRATE_720P=5000000
